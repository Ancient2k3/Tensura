function Notify_Players_X(txt_1, txt_2, duration_x, button_1txt, button_1func, button_2txt, button_2func)
    local notificationData = {
        Title = txt_1,
        Text = txt_2,
        Duration = duration_x
    }

    if button_1txt and button_1func then
        notificationData.Button1Text = button_1txt
        notificationData.Button1Callback = button_1func
    end

    if button_2txt and button_2func then
        notificationData.Button2Text = button_2txt
        notificationData.Button2Callback = button_2func
    end

    game:GetService("StarterGui"):SetCore("SendNotification", notificationData)
end

_G.Notify_LP = Notify_Players_X

