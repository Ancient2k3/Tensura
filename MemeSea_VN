MemeGui.Parent = game.CoreGui

-- UI Tweening Info --

local TweenService = game:GetService("TweenService")
local tweenSpeed = 1
local tweenInfo = TweenInfo.new(tweenSpeed, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut)

-- Let Close It --

-- Hold All Function --

local function NotifyRandom()
local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "Tìm Trái Ngẫu Nhiên",
            Text = "Đã hoàn tất trao đổi trái, Nếu không có nghĩa là bạn không đủ tiền thế thôi !",
            Duration = 2,
        })
end

