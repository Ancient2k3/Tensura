local button7 = Instance.new("TextBox")
button7.Parent = MemeTools
button7.BackgroundColor3 = Color3.new(0, 0, 0)
button7.BackgroundTransparency = 0.5
button7.Size = UDim2.new(0.03, 0, 0.9, 0)  -- Adjusted size for better visibility
button7.TextScaled = true
button7.Position = UDim2.new(0.245, 0, 0, 0)  -- Positioned inside the ScrollingFrame
button7.TextColor3 = Color3.fromRGB(255, 255, 255)
button7.Font = Enum.Font.PatrickHand
button7.Text = "Chạy Nhanh/Ghi vào tốc độ chạy"
button7.ClearTextOnFocus = true

button7.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        local speedv = button7.Text
        
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = speedv
    end
end)

