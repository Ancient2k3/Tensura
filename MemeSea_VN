-- 4 --

local button5 = Instance.new("TextButton")
button5.Parent = MemeTools
button5.BackgroundColor3 = Color3.new(0, 0, 0)
button5.BackgroundTransparency = 0.5
button5.Size = UDim2.new(0.03, 0, 0.9, 0)
button5.TextScaled = true
button5.Position = UDim2.new(0.165, 0, 0, 0)
button5.TextColor3 = Color3.new(1, 1, 1)
button5.Font = Enum.Font.PatrickHand
button5.Text = "Gói túi tiền"

button5.MouseButton1Click:Connect(function()
    local valuex = button4.Text
    
    local args = {
    [1] = valuex
}

game:GetService("ReplicatedStorage").OtherEvent.MainEvents.DropMoney:InvokeServer(unpack(args))
    
    local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "《Hoàn tất》",
            Text = "Nếu không được thì là do bạn không có tiền, hoặc nhập sai số !",
            Duration = 1,
        })
end)

