-- ScrollingFrame Ability --

local button1 = Instance.new("TextButton")
button1.Parent = MemeTools
button1.BackgroundColor3 = Color3.new(0, 0, 0)
button1.BackgroundTransparency = 0.5
button1.Size = UDim2.new(0.03, 0, 0.9, 0)
button1.TextScaled = true
button1.Position = UDim2.new(0.005, 0, 0, 0)
button1.TextColor3 = Color3.new(1, 1, 1)
button1.Font = Enum.Font.PatrickHand
button1.Text = "Tìm Trái Ngẫu nhiên hoặc Nhập mã Giftcode"

local goalPosition3 = UDim2.new(0, 0, 0.2, 0)  -- Move ScrollingFrame down
local goalPosition4 = UDim2.new(-1, 0, 0.2, 0)  -- Original position

local tween3 = TweenService:Create(RandomSelect, tweenInfo, {Position = goalPosition3})
local tween4 = TweenService:Create(RandomSelect, tweenInfo, {Position = goalPosition4})

local isToggled1 = false
button1.MouseButton1Click:Connect(function()
    if isToggled1 then
        tween4:Play()
        button1.TextColor3 = Color3.new(1, 1, 1)
    else
        tween3:Play()
        button1.TextColor3 = Color3.new(1, 0, 1)
    end
    isToggled1 = not isToggled1
end)

