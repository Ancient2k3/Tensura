local function NotifyUFO()
    local CoreGui = game:GetService("StarterGui")
        CoreGui:SetCore("SendNotification", {
            Title = "《Chuẩn bị triệu hồi》",
            Text = "Đang được tiến hành đưa đến đảo đã chọn, nếu không được thì nghĩa là nó chưa hồi chiêu !",
            Duration = 2,
        })
end

