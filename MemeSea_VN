local button6 = Instance.new("TextButton")
button6.Parent = MemeTools
button6.BackgroundColor3 = Color3.new(0, 0, 0)
button6.BackgroundTransparency = 0.5
button6.Size = UDim2.new(0.03, 0, 0.9, 0)
button6.TextScaled = true
button6.Position = UDim2.new(0.205, 0, 0, 0)
button6.TextColor3 = Color3.new(1, 1, 1)
button6.Font = Enum.Font.PatrickHand
button6.Text = "Tự thả gói tiền: đang tắt"

local isDropped = false

button6.MouseButton1Click:Connect(function()
    if isDropped then
        button6.Text = "Tự thả gói tiền: đang tắt"
        button6.TextColor3 = Color3.new(1, 1, 1)
        
        isDropped = false
    else
        button6.Text = "Tự thả gói tiền: đang bật nhé"
        button6.TextColor3 = Color3.new(0, 1, 0)
        
        isDropped = true
        
        while isDropped do
            MoneyBagDropped()
            wait(0.5)
        end
    end
end)

