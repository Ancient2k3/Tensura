local Plrs, plr, h1, h2, ch, ppos, statec
Plrs = game:GetService("Players")
plr = Plrs.LocalPlayer
ch = plr.Character
h1 = ch.Humanoid
h2 = ch.HumanoidRootPart
ppos = h2.Position
statec = false

function autocorrectname(splr)
    for _, xplr in ipairs(Plrs:GetPlayers()) do
        if string.lower(xplr.Name):sub(1, #input) == string.lower(input) or
        string.lower(xplr.DisplayName):sub(1, #input) == string.lower(input) then
            return xplr
        end
    end
    return nil
end

function loadchat(str)
    str = tostring(str)
    local tcs = game:GetService("TextChatService")
    local lcs = game:GetService("ReplicatedStorage"):FindFirstChild("DefaultChatSystemChatEvents")
    
    if lcs then
        lcs.SayMessageRequest:FireServer(str, "All")
    elseif tcs then
        local gc = tcs.TextChannels.RBXGeneral
        
        if gc then
            gc:SendAsync(str)
        end
    end
end

function ntf(msf, tsf)
    local stp = game:GetService("StarterGui")
    stp:SetCore("SendNotification", {
        Title = msf,
        Text = tsf,
        Duration = 3,
    })
end

function cmdsx(cmd)
    local wis = string.split(cmd, " ")
    if not statec then
    statec = true
    
    if wis[1] == "-buyitem" and #wis > 1 then
        local itemcanbuy = table.concat(wis, " ", 2)
        local args = {
            [1] = "BuyItem",
            [2] = itemcanbuy
        }
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
        statec = false
    elseif wis[1] == "-buyfruit" and wis[2] then
        local fruitcanbuy = wis[2]
        local args = {
            [1] = "PurchaseRawFruit",
            [2] = fruitcanbuy,
            [3] = false
        }
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
        statec = false
    elseif wis[1] == "-awk" then
        game:GetService("Players").LocalPlayer.PlayerGui.Main.AwakeningToggler.Visible = true
        statec = false
    elseif wis[1] == "-titles" then
        game:GetService("Players").LocalPlayer.PlayerGui.Main.Titles.Visible = true
        statec = false
    elseif wis[1] == "-redz" then
            loadstring(game:HttpGet("https://raw.githubusercontent.com/realredz/BloxFruits/refs/heads/main/Source.lua"))()
            statec = false
            ntf("Loading REDZ", "A useful blox fruits script not by me.")
    elseif wis[1] == "-miniui" and wis[2] == "v0.01" then
        loadstring(game:HttpGet("https://byvn.net/qWp7"))()
        statec = false
        ntf("Loading Mini UI", "Self Create Blox Fruits Script: Mini UI v0.01.")
    elseif wis[1] == "-tptool" then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NganHa2k3/Ability/refs/heads/main/TeleportTool"))()
        statec = false
        ntf("Teleport Tool", "Check it in your inventory or backpack...")
    elseif wis[1] == "-tptool" and wis[2] == "v2" and wis[3] then
        local edit_dis_1 = tonumber(wis[3])
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NganHa2k3/Tools/refs/heads/main/Teleport"))()
        _G.Dis = edit_dis_1 or 50
        statec = false
        ntf("Teleport Tool V2", "Check it in your inventory or backpack...")
    elseif wis[1] == "-twtool" and wis[2] and wis[3] then
        local edit_dis_2 = tonumber(wis[2])
        local edit_ts_1 = tonumber(wis[3])
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NganHa2k3/Tools/refs/heads/main/Tween"))()
        _G.Dis = edit_dis_2 or 50
        _G.TweenSpeed = edit_ts_1 or 250
        statec = false
        ntf("Tweening Tool", "Check it in your inventory or backpack...")
    elseif wis[1] == "-random" or wis[1] == "-fruit" or wis[1] == "-gacha" then
        local args = {
            [1] = "Cousin",
            [2] = "Buy"
        }
        
        game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
        statec = false
        ntf("Randomizer a Fruit!", "Completed Randomize a fruit, check your inventory... if not check your money :v")
    elseif wis[1] == "-cmds" then
        loadchat("List of all command: below!")
        loadchat("[1]: -buyitem, -buyfruit")
        loadchat("[2]: -awk, -titles, -tptool, -random, -fruit, -gacha, -redz")
        loadchat("[3]: -cmds.")
        statec = false
    end
    statec = false
    end
end

plr.Chatted:Connect(cmdsx)
print("Commands Script done executed!")
ntf("Commands Script Executed!", "type -cmds to show all useful commands, this script was make for blox fruits game.")
